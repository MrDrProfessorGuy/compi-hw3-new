%{

/* Declarations section */

#include "hw3_output.hpp"
#include <cstdlib>



#define YYDEBUG 1 


extern int yylex(); 
int yyerror(const char * message);

#define NewNode(attr, children) $$ = createNode(); $$->setAttributes(attr); $$->setChildren(children);
#define Cast(obj, Type) (std::static_pointer_cast<TYPE>(obj))


%}

%define api.value.type {struct YYSTYPE}


%type <ProgramNode> Program
%type <NodeFuncsList> Funcs
%type <NodeFuncDecl> FuncDecl
%type <NodeRetType> RetType
%type <NodeFormalsList> FormalsList
%type <NodeFormalsList> Formals
%type <NodeFormalDecl> FormalDecl
%type <NodeStatementList> Statements
%type <NodeStatement> Statement
%type <NodeExp> Type
%type <NodeCall> Call
%type <NodeExpList> ExpList
%type <NodeExp> Exp

%token <NodeToken> VOID
%token <NodeToken> INT
%token <NodeToken> BYTE
%token <NodeToken> B
%token <NodeToken> BOOL

%token <NodeToken> TRUE
%token <NodeToken> FALSE
%token <NodeToken> RETURN


%token <NodeToken> WHILE
%token <NodeToken> BREAK
%token <NodeToken> CONTINUE
%token <NodeToken> SC
%token <NodeToken> COMMA
%token <NodeToken> LPAREN

%token <NodeToken> LBRACE
%token <NodeToken> RBRACE

%token <NodeToken> ID
%token <NodeToken> NUM
%token <NodeToken> STRING
%nonassoc <NodeToken> IF

%left <NodeToken> OR
%left <NodeToken> AND
%token <NodeToken> ASSIGN
%left <NodeToken> EQUALITY
%left <NodeToken> RELOP
%left <NodeToken> BINOP_ADD
%left <NodeToken> BINOP_MUL
%precedence <NodeToken> NOT
%precedence <NodeToken> RPAREN
%nonassoc <NodeToken> ELSE



%%
    Program: Funcs                                                              {output::errorLex(1);};
    Funcs: /*epsilon*/                                                          %empty {output::errorLex(2);};
    Funcs: FuncDecl Funcs                                                       {output::errorLex(3);};
    FuncDecl: RetType ID LPAREN Formals RPAREN LBRACE Statements RBRACE         {output::errorLex(4);};
    RetType: Type                                                               {output::errorLex(5);};
    RetType:  VOID                                                              {output::errorLex(6);};
    Formals: /*epsilon*/                                                        %empty {output::errorLex(7);};
    Formals: FormalsList                                                        {output::errorLex(8);};
    FormalsList: FormalDecl                                                     {output::errorLex(9);};
    FormalsList: FormalDecl COMMA FormalsList                                   {output::errorLex(10);};
    FormalDecl: Type ID                                                         {;};
    Statements: Statement                                                       {output::errorLex(12);};
    Statements: Statements Statement                                            {output::errorLex(13);};
    Statement: LBRACE Statements RBRACE                                         {output::errorLex(14);};
    Statement: Type ID SC                                                       {$$ = new Node_Statement_ID_Decl($1, $2, $3);};
    Statement: Type ID ASSIGN Exp SC                                            {$$ = new Node_Statement_ID_Decl($1, $2, $3, $4, $5);};
    Statement: ID ASSIGN Exp SC                                                 {output::errorLex(17);};
    Statement: Call SC                                                          {output::errorLex(18);};
    Statement: RETURN SC                                                        {output::errorLex(19);};
    Statement: RETURN Exp SC                                                    {output::errorLex(20);};
    Statement: IF LPAREN Exp RPAREN Statement %prec IF                          {output::errorLex(21);};
    Statement: IF LPAREN Exp RPAREN Statement ELSE Statement                    {output::errorLex(22);};
    Statement: WHILE LPAREN Exp RPAREN Statement                                {output::errorLex(23);};
    Statement: BREAK SC                                                         {output::errorLex(24);};
    Statement: CONTINUE SC                                                      {output::errorLex(25);};
    Call: ID LPAREN ExpList RPAREN                                              {output::errorLex(26);};
    Call: ID LPAREN RPAREN                                                      {output::errorLex(27);};
    ExpList: Exp                                                                {output::errorLex(28);};
    ExpList: Exp COMMA ExpList                                                  {output::errorLex(29);};
    Type: INT                                                                   {output::errorLex(30);};
    Type: BYTE                                                                  {output::errorLex(31);};
    Type: BOOL                                                                  {output::errorLex(32);};
    Exp: LPAREN Exp RPAREN                                                      {output::errorLex(33);};
    Exp: Exp IF LPAREN Exp RPAREN ELSE Exp                                      {output::errorLex(34);};
    Exp: Exp BINOP_ADD Exp                                                      {};
    Exp: Exp BINOP_MUL Exp                                                      {};
    Exp: ID                                                                     {$$ = new Node_Exp_ID($1);};
    Exp: Call                                                                   {output::errorLex(37);};
    Exp: NUM                                                                    {output::errorLex(38);};
    Exp: NUM B                                                                  {output::errorLex(39);};
    Exp: STRING                                                                 {output::errorLex(40);};
    Exp: TRUE                                                                   {output::errorLex(41);};
    Exp: FALSE                                                                  {output::errorLex(42);};
    Exp: NOT Exp                                                                {output::errorLex(43);};
    Exp: Exp AND Exp                                                            {output::errorLex(44);};
    Exp: Exp OR Exp                                                             {};
    Exp: Exp RELOP Exp                                                          {};
    Exp: Exp EQUALITY Exp                                                       {};
    Exp: LPAREN Type RPAREN Exp                                                 {};
%%

